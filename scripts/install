#!/bin/bash

# Retrieve arguments
domain=$1
url_path=$2

# Check domain/path availability
sudo yunohost app checkurl $domain$url_path -a sonerezh
if [[ ! $? -eq 0 ]]; then
    exit 1
fi

# Generate random DES key & password
deskey=$(dd if=/dev/urandom bs=1 count=200 2> /dev/null | tr -c -d '[A-Za-z0-9]' | sed -n 's/\(.\{24\}\).*/\1/p')
db_pwd=$(dd if=/dev/urandom bs=1 count=200 2> /dev/null | tr -c -d '[A-Za-z0-9]' | sed -n 's/\(.\{24\}\).*/\1/p')

# Use 'sonerezh' as database name and user
db_user=sonerezh

# Initialize database and store mysql password for upgrade
sudo yunohost app initdb $db_user -p $db_pwd -s $(readlink -e ../sources/SQL/mysql.initial.sql)
sudo yunohost app setting sonerezh mysqlpwd -v $db_pwd

# Copy files to the right place
src_path=/var/www/sonerezh
sudo mkdir -p $src_path
sudo cp -a ../sources/. $src_path

# Set permissions to sonerezh directory
sudo chown -R www-data: $src_path
sudo chmod -R 775 $src_path

# Configure data repository
data_path=/home/yunohost.app/sonerezh/data
sudo mkdir -p $data_path

# Modify Nginx configuration file and copy it to Nginx conf directory
sed -i "s@PATHTOCHANGE@$url_path@g" ../conf/nginx.conf
sed -i "s@ALIASTOCHANGE@$src_path/@g" ../conf/nginx.conf
sudo cp ../conf/nginx.conf /etc/nginx/conf.d/$domain.d/sonerezh.conf

# Configure PHP configuration
sudo cp ../conf/php-fpm.conf /etc/php5/fpm/pool.d/sonerezh.conf

# Reload Nginx and PHP conf
sudo service nginx reload
sudo service php5-fpm reload
