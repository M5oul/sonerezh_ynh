{
    "name": "Sonerezh",
    "id": "sonerezh",
    "description": {
        "en": "A self-hosted, web-based application for stream your music, everywhere.",
        "fr": "Application web pour Ã©couter en streaming sa musique partout."
    },
    "url": "https://www.sonerezh.bzh/",
    "license": "free",
    "maintainer": {
        "name": "Moul",
        "email": "moul@moul.re"
    },
    "multi_instance": "false",
    "services": [
        "nginx",
	"php5-fpm"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
		"type": "domain",
                "ask": {
                    "en": "Domain name for Sonerezh",
                    "fr": "Nom de domaine sur lequel installer Sonerezh"
                },
		"example": "domain.org"
            },
            {
                "name": "path",
		"type": "path",
                "ask": {
                    "en": "Path for Sonerezh",
                    "fr": "Chemin sur lequel installer Sonerezh"
                },
                "example": "/sonerezh",
                "default": "/sonerezh"
            }
        ]
    }
}
